{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "build",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "strictPropertyInitialization": true
    },
    "include": ["src"]
}
